@model ozyer.Models.ServiceModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<section id="column-selectors">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Blog Listesi</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="d-flex justify-content-end m-r-10">
                            <a href="/admin/blog/save" class="btn btn-success pull-right">Yeni Sayfa ekle</a>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped dataex-html5-selectors">
                                <thead>
                                    <tr>
                                        <th>Blog Adı</th>
                                        <th>Tarih</th>
                                        <th>Yazar</th>
                                        <th colspan="2">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.BlogList)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Date.Value.ToShortDateString()</td>
                                            <td>@item.Author</td>
                                            <td><a class="btn btn-primary" href="/admin/blog/save/@item.Id">Düzenle</a></td>
                                            <td><button class="btn btn-danger btnDelete" data-id="@item.Id" data-url="/admin/blog/delete">Sil</button></td>
                                        </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Blog Adı</th>
                                        <th>Tarih</th>
                                        <th>Yazar</th>
                                        <th colspan="2">İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

