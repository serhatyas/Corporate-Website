@model List<ozyer.Areas.admin.Model.Pages>
@{ 
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<section id="column-selectors">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Sayfa Listesi</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="d-flex justify-content-end m-r-10">
                            <a href="/admin/pages/create" class="btn btn-success pull-right">Yeni Sayfa ekle</a>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped dataex-html5-selectors">
                                <thead>
                                    <tr>
                                        <th>Sayfa Adı</th>
                                        <th>Tarih</th>
                                        <th>Başlık</th>
                                        <th colspan="2">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Date.Value.ToShortDateString()</td>
                                        <td>@item.Title</td>
                                        <td><a class="btn btn-primary" href="/admin/pages/update/@item.Id">Düzenle</a></td>
                                        <td><button class="btn btn-danger btnDelete" data-id="@item.Id" data-url="/admin/pages/delete">Sil</button></td>
                                    </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Sayfa Adı</th>
                                        <th>Logo</th>
                                        <th>Date</th>
                                        <th colspan="2">İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

