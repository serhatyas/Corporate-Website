@model ozyer.Models.ServiceModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<section id="column-selectors">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Mesaj Listesi</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="table-responsive">
                            <table class="table table-striped dataex-html5-selectors">
                                <thead>
                                    <tr>
                                        <th>Mesaj</th>
                                        <th>Konu</th>
                                        <th>Ad</th>
                                        <th>Soyad</th>
                                        <th colspan="1">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ContactMessageList)
                                    {
                                    <tr>
                                        <td>@item.Message</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Date.Value.ToShortDateString()</td>
                                        <td><button class="btn btn-danger btnDelete" data-id="@item.Id" data-url="/admin/blog/delete">Sil</button></td>
                                    </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Mesaj</th>
                                        <th>Konu</th>
                                        <th>Ad</th>
                                        <th>Soyad</th>
                                        <th colspan="1">İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


