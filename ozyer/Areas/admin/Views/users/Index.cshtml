@model List<ozyer.Areas.admin.Model.Users>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

@section css{
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/css/tables/datatable/datatables.min.css">
}




<!-- Column selectors with Export Options and print table -->
<section id="column-selectors">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Kullanıcı Listesi</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="d-flex justify-content-end m-r-10">
                            <a href="/admin/users/create" class="btn btn-success pull-right">Yeni kullanıcı ekle</a>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped dataex-html5-selectors">
                                <thead>
                                    <tr>
                                        <th>Ad Soyad</th>
                                        <th>Mail</th>
                                        <th>Tarih</th>
                                        <th colspan="2">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Mail</td>
                                            <td>@item.Date.ToShortDateString()</td>
                                            <td><a class="btn btn-primary" href="/admin/users/update/@item.Id">Düzenle</a></td>
                                            <td><button class="btn btn-danger btnDelete" data-id="@item.Id" data-url="/admin/users/delete">Sil</button></td>
                                        </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Ad Soyad</th>
                                        <th>Mail</th>
                                        <th>Tarih</th>
                                        <th colspan="2">İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Column selectors with Export Options and print table -->







