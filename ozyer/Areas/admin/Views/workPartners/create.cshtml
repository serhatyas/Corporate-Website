@model ozyer.Models.ServiceModel
@{
    ViewBag.Title = "create";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<div class="container-fluid">

    <form enctype="multipart/form-data" action="/admin/workpartners/create" method="post" class="col-md-12">
        <div class="row">

            <div class="col-8">
                <div class="form-group">
                    <label>Çalışma Ortağı Açıklaması</label>
                    @Html.TextAreaFor(x => x.workPartners.Description, new { @class = "form-control", id = "editor", required = "required" })
                    @Html.ValidationMessageFor(x => x.workPartners.Description)
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label>Çalışma Ortağı Adı</label>
                    @Html.TextBoxFor(x => x.workPartners.Name, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.workPartners.Name)
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.workPartners.Phone, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.workPartners.Phone)
                </div>
                <div class="form-group">
                    <label>WebSite</label>
                    @Html.TextBoxFor(x => x.workPartners.WebSite, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.workPartners.WebSite)
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextBoxFor(x => x.workPartners.Address, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.workPartners.Address)
                </div>
                <div class="form-group">
                    <label>Sektör</label>
                    @Html.DropDownListFor(x => x.workPartners.SectorId, new SelectList(Model.SectorList,
                   "Id", "Name"), new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.workPartners.SectorId)
                </div>
                <div class="form-group">
                    <label>İştirak</label>
                    @Html.DropDownListFor(x => x.workPartners.ParticipationsGroupId, new SelectList(Model.ParticipationsGroupsList,
                   "Id", "Name"), new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.workPartners.ParticipationsGroupId)
                </div>
