            <label>Adres</label>
            @Html.DropDownListFor(x => x.workPartners.SectorId, new SelectList(Model.SectorList, "Id", "Name"), new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(x => x.workPartners.SectorId)
        </div>*@
                <div class="form-group">
                    <label>Logo</label>
                    <input type="file" name="Logo" class="form-control" value="" />
                </div>
                <div class="form-group">
                    <label>Resim</label>
                    <input type="file" name="Images" class="form-control" value="" />
                </div>
                <div class="form-group">
                    <label>Galeri</label>
                    <input type="file" name="gallery" multiple class="form-control" value="" />
                </div>
                <div class="col-12">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-success" type="submit">Kaydet</button>
                    </div>
                </div>
            </div>

        </div>


    </form>


</div>

