
@{
    Layout = null;

    ozyer.Areas.admin.Model.ServiceDB db = new ozyer.Areas.admin.Model.ServiceDB();
    var settingList = db.Settings.ToList();
    var setting = new ozyer.Areas.admin.Model.Settings();
    if (settingList.Count != 0)
    {
        setting = db.Settings.ToList().Last();
